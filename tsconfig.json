{
 "compilerOptions": {
   "skipLibCheck": true,
   "module": "commonjs",
   "target": "es2017",
   "lib": ["es6", "dom"],
   "strict": true,
   "esModuleInterop": true,
   "moduleResolution": "node",
   "sourceMap": true,
   "outDir": "dist",
   "baseUrl": ".",
   "paths": {
     "*": ["node_modules/*", "src/types/*"]
   },
   "allowJs": true,
   "resolveJsonModule": true,
   "strictNullChecks": true,
   "useUnknownInCatchVariables": false,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
 },
 "include": ["src/**/*"]
}
